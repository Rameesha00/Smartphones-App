<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#516194"
    tools:context=".Activities.Boost">
    <TextView
        android:id="@+id/ramavailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FEE15A"
        android:padding="20sp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>
    <TextView
        android:id="@+id/memoryavailable"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FEE15A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20sp"
        app:layout_constraintTop_toBottomOf="@id/ramavailable"/>

    <TextView
        android:id="@+id/cpustatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FEE15A"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:padding="20sp"
        app:layout_constraintTop_toBottomOf="@id/memoryavailable"/>




    <com.skyfishjy.library.RippleBackground
        android:id="@+id/content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:rb_color="#FEE15A"
        app:rb_duration="3000"
        app:rb_radius="32dp"
        app:rb_rippleAmount="4"
        app:rb_scale="6">

        <ImageView
            android:id="@+id/centerImage"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_centerInParent="true"
             />

    </com.skyfishjy.library.RippleBackground>
    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/boost"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        android:backgroundTint="#FEE15A"
        android:text=" TOuch here to Boost your Phone"
        android:textStyle="bold"
        android:textColor="#516194"/>

</androidx.constraintlayout.widget.ConstraintLayout>